@model IEnumerable<Case>

@{
	ViewData["Title"] = "Accepted-Cases";
}
<link rel="stylesheet" href="~/css/tables.css">
<div class="container-fluid my-5 bg-white p-3 mytable">
	<div class="row mb-4">
		<div class="col-6">
			<h5 class="tableName mb-4 mt-2">Accepted Cases Table</h5>
		</div>
		<div class="col-6 text-end">
			<a asp-action="create" class="btn btn-outline-primary">Create New Case</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.PhoneNumber)
				</th>
				<th>
					@Html.DisplayNameFor(model =>model.NationalId)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="align-middle">
					<td class="d-flex align-items-center">
						@*@if (item.ProfileImage != null)
						{
							<img width="45" height="45" class="rounded-3 me-3" src="data:image/png;base64,@Convert.ToBase64String(item.ProfileImage)">
						}*@
						<span>@item.Name</span>
					</td>
					<td>@item.PhoneNumber</td>
					<td>@item.NationalId</td>
					<td class="text-end gap-1">
						<a asp-action="details" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="fa-solid fa-circle-info"></i> Details</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

