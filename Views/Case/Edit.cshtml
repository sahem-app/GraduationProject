            </div>
            <div class="form-group">
                <label asp-for="MediatorId" class="control-label"></label>
                <select asp-for="MediatorId" class="form-control" asp-items="@(new SelectList(Model.Mediator,"Id","Name"))">
                </select>
                <span asp-validation-for="MediatorId" class="text-danger"></span>
