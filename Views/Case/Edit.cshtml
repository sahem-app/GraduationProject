            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $(document).ready(function () {
        $('#image1').on('change', function () {
            var selectedfile = $(this).val().split('\\').pop();
            $(this).siblings('label').text(selectedfile);
        });
        $('.datepicker').datepicker();
    });

    /*Governorate >> City >> Region*/
    function updatesubcategorylist() {
        var selectcategory = document.getElementById("ddlgovernorate").value;
        $list = $('#ddlcity');
        $.ajax({
            url: '/Case/GetRegion/' + selectcategory,
            type: 'GET',
            datatype: 'text',
            success: function (data) {
                $list.html('');
                var items = '';
                for (i in data) {
                    items += '<option value="' + data[i].value + '">' + data[i].text + '<option>';
                }
                $list.html(items);
            }
        });
    }

    $(document).ready(updatesubcategorylist);

    $("#ddlgovernorate").on("change", function () {
        updatesubcategorylist();
    })

</script>
}
