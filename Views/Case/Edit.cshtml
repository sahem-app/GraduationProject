            </div>
            <div class="form-group">
                <label asp-for="SocialStatusId" class="control-label"></label>
                <select asp-for="SocialStatusId" class="form-control" asp-items="@(new SelectList(Model.SocialStatus,"Id","Name"))">
                </select>
                <span asp-validation-for="SocialStatusId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" id="ddlgovernorate" class="form-control" asp-items="@(new SelectList(Model.cities,"Id","Name"))">
                </select>
