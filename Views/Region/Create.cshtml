@model RegionVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create Region</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GovernorateId" class="control-label"></label>
                <select id="ddlgovernorate" asp-for="GovernorateId" class="form-control" asp-items="@(new SelectList(Model.governorate,"Id","Name"))"></select>
                <span asp-validation-for="GovernorateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select id="ddlcity" asp-for="CityId" class="form-control" asp-items="@(new SelectList(string.Empty,"Id","Name"))"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-warning">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function updatesubcategorylist() {
            var selectcategory = document.getElementById("ddlgovernorate").value;
            $list = $('#ddlcity');
            $.ajax({
                url: '/Region/GetCity/' + selectcategory,
                type: 'GET',
                datatype: 'text',
                success: function (data) {
                    $list.html('');
                    var items = '';
                    for (i in data) {
                        items += '<option value="' + data[i].value + '">' + data[i].text + '<option>';
                    }
                    $list.html(items);
                }
            });
        }

        $(document).ready(updatesubcategorylist);

        $("#ddlgovernorate").on("change", function () {
            updatesubcategorylist();
        })
    </script>
}
