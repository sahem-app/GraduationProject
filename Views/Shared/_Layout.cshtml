<!DOCTYPE html>
<html class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">

<head>
    <meta charset="UTF-8">
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/templete/assets/img/favicon/favicon.ico" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />
    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/templete/assets/vendor/fonts/boxicons.css" />
    <!-- Core CSS -->
    <link rel="stylesheet" href="~/templete/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/templete/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/templete/assets/css/demo.css" />
    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/templete/assets/vendor/js/helpers.js"></script>

    <title>Sahem - @ViewData["Title"]</title>
</head>
<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a asp-controller="Home" asp-action="Index" class="app-brand-link">
                       
                        <img src="~/imgs/logo.jpeg" width="25px"></img>
                        <span class="app-brand-text demo menu-text fw-bolder ms-2"> <i class="fa-regular fa-hand-back-fist"></i><span>S</span>ahem</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>
                <div class="menu-inner-shadow"></div>
                <ul class="menu-inner py-1">
                    <!-- Dashboard -->
                    <li class="menu-item active">
                        <a asp-controller="Home" asp-action="index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            <div data-i18n="Analytics">Dashboard</div>
                        </a>
                    </li>
                    <!-- Cases & Mediators-->
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Cases & Mediators</span>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class='menu-icon bx bx-group' ></i>
                            <div data-i18n="Account Settings">Cases</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a asp-controller="Case" asp-action="PendingCases" class="menu-link">
                                    <div data-i18n="Account">Pending Cases</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="Case" asp-action="AcceptedCases" class="menu-link">
                                    <div data-i18n="Account">Accepted Cases</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="Case" asp-action="RejectedCases" class="menu-link">
                                    <div data-i18n="Notifications">Rejected Cases</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="Category" asp-action="Index" class="menu-link">
                                    <div data-i18n="Connections">Case Category</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Mediators -->

                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class='menu-icon bx bx-group' ></i>
                            <div data-i18n="Account Settings">Mediators</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a asp-controller="mediator" asp-action="index" asp-route-status="@StatusType.Submitted" class="menu-link">
                                    <div data-i18n="Account">Pending Cases</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="mediator" asp-action="index" asp-route-status="@StatusType.Accepted" class="menu-link">
                                    <div data-i18n="Account">Accepted Cases</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="mediator" asp-action="index" asp-route-status="@StatusType.Rejected" class="menu-link">
                                    <div data-i18n="Notifications">Rejected Cases</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- location -->

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Location</span>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class='menu-icon bx bx-location-plus'></i> 
                            <div data-i18n="Account Settings"> Location</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a asp-controller="Governorate" asp-action="index" class="menu-link">
                                    <div data-i18n="Account">Governorates</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="City" asp-action="index" class="menu-link">
                                    <div data-i18n="Account">Cities</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-controller="Region" asp-action="index" class="menu-link">
                                    <div data-i18n="Notifications">Regions</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- SMS Message -->

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">SMS Message</span>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                           <i class='menu-icon bx bx-message-rounded-dots'></i> 
                            <div data-i18n="Account Settings"> SMS Message</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a asp-controller="SMS" asp-action="Send" class="menu-link">
                                    <div data-i18n="Account">Send SMS</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </aside>
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->

                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme" id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>
                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <!-- Search -->
                        <div class="navbar-nav align-items-center">
                            <div class="nav-item d-flex align-items-center">
                                <i class="bx bx-search fs-4 lh-0"></i>
                                <input type="text" class="form-control border-0 shadow-none" placeholder="Search..." aria-label="Search..." />
                            </div>
                        </div>
                        <!-- /Search -->

                        <ul class="navbar-nav flex-row align-items-center ms-auto">

                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="~/templete/assets/img/avatars/1.png" alt="pic" class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="~/templete/assets/img/avatars/1.png" alt="pic" class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">salah elsayed</span>
                                                    <small class="text-muted">Admin</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-user me-2"></i>
                                            <span class="align-middle">My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-cog me-2"></i>
                                            <span class="align-middle">Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <form method="post" id="logoutform" asp-controller="account" asp-action="logout" class="menu-link">
                                            <a class="dropdown-item" href="#" onclick="document.getElementById('logoutform').submit()">
                                                <i class="bx bx-power-off me-2"></i>
                                                <span class="align-middle">Log Out</span>
                                            </a>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                </nav>
                <!-- / Navbar -->
                <main class="container pb-3">@RenderBody()</main>
            </div>
        </div>
    </div>

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/templete/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/templete/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/templete/assets/vendor/js/bootstrap.js"></script>
    <script src="~/templete/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/templete/assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <script src="~/templete/assets/vendor/libs/apex-charts/apexcharts.js"></script>

    <!-- Main JS -->
    <script src="~/templete/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/templete/assets/js/dashboards-analytics.js"></script>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
       <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBW_5XYJse-i3qtDNcWWENWubo1IwqQ3VA&callback=initMap">
    </script>
	<script type="module" src="~/js/notification.js"></script>
    @await Component.InvokeAsync("NToastNotify")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
