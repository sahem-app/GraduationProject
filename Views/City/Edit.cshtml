@model CityVM

@{
    ViewData["Title"] = "Edit- City";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group mb-3">
                <label asp-for="GovernorateId" class="control-label"></label>
                <select asp-for="GovernorateId" class="form-select" asp-items="@(new SelectList(Model.Governorates,"Id","Name"))"></select>
                <span asp-validation-for="GovernorateId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary me-3">Save</button>
				 <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
