@model CityVM

@{
    ViewData["Title"] = "Edit- City";
}

<hr />

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page/</span> Edit City</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    
                    <small class="text-muted float-end">Edit City</small>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Id" />
                        <div class="row mb-3">
                            <label  asp-for="GovernorateId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <select asp-for="GovernorateId" class="form-control" id="basic-default-name" asp-items="@(new SelectList(Model.Governorates,"Id","Name"))"></select>
                                <span asp-validation-for="GovernorateId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label  asp-for="Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input asp-for="Name" type="text" class="form-control" id="basic-default-name" placeholder="Enter city name...."/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label  asp-for="Name_AR" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input asp-for="Name_AR" type="text" class="form-control" id="basic-default-name" placeholder="Enter city Name_ARabic...."/>
                                <span asp-validation-for="Name_AR" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Edit</button>
                                <a asp-action="Index" class="btn btn-dark">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Basic with Icons -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
