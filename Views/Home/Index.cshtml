@{
    ViewData["Title"] = "Home Page";
}


<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-lg-8 mb-4 order-0">
                <div class="card">
                    <div class="d-flex align-items-end row">
                        <div class="col-sm-7">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Hi, @User.Identity.Name</h5>
                                <p class="mb-4">
                                  Welcome to another day of helping more pepole
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-5 text-center text-sm-left">
                            <div class="card-body pb-0 px-0 px-md-4">
                                <img src="~/templete/assets/img/illustrations/man-with-laptop-light.png"
                                     height="140"
                                     alt="View Badge User"
                                     data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                     data-app-light-img="illustrations/man-with-laptop-light.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 order-1">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <img src="~/templete/assets/img/icons/unicons/chart-success.png"
                                             alt="chart success"
                                             class="rounded" />
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn p-0"
                                                type="button"
                                                id="cardOpt3"
                                                data-bs-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
                                            <a class="dropdown-item" asp-controller="Case" asp-action="PendingCases">Pending Cases</a>
                                            <a class="dropdown-item" asp-controller="Case" asp-action="AcceptedCases">Accepted Cases</a>
                                            <a class="dropdown-item" asp-controller="Case" asp-action="RejectedCases">Rejected Cases</a>
                                        </div>
                                    </div>
                                </div>
                                <span class="fw-semibold d-block mb-1">Cases</span>
                                <h3 class="card-title mb-2">@TempData["casecount"]</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <img src="~/templete/assets/img/icons/unicons/wallet-info.png"
                                             alt="Credit Card"
                                             class="rounded" />
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn p-0"
                                                type="button"
                                                id="cardOpt6"
                                                data-bs-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
                                            <a class="dropdown-item" asp-controller="Mediator" asp-action="index" >index</a>
                                        </div>
                                    </div>
                                </div>
                                <span>Mediators</span>
                                <h3 class="card-title text-nowrap mb-1">@TempData["mediatorcount"]</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
            </div>
        <div class="row">
            <!-- total case-->
            <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between pb-0">
                        <div class="card-title mb-0">
                            <h5 class="m-0 me-2">Details the cases</h5>
                            <small class="text-muted align-content-ends">number of cases : @TempData["casecount"]</small>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex flex-column align-items-center gap-1">
                                <span>Total Cases</span>
                            </div>
                            <div id="orderStatisticsChart"></div>
                        </div>
                        <ul class="p-0 m-0">
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-success"> <i class='menu-icon bx bx-group' ></i></span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Pending Cases</h6>
                                        <small class="text-muted">The number of cases that have been pending</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["casepencount"]</small>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-primary">
                                         <i class='menu-icon bx bx-group' ></i>
                                    </span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Accepted Cases</h6>
                                        <small class="text-muted">The number of cases that have been accepted</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["caseacccount"]</small>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-success"><i class='menu-icon bx bx-group' ></i></span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Rejected Cases</h6>
                                        <small class="text-muted">The number of cases that have been rejected</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["caserejcount"]</small>
                                    </div>
                                </div>
                            </li>
                          
                            <li class="d-flex">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-secondary">
                                       <i class='menu-icon bx bx-group' ></i>
                                    </span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">urgent Cases</h6>
                                        <small class="text-muted">The number of urgent priority cases  </small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["caseUrgentprioritycount"]</small>
                                    </div>
                                </div>
                            </li>

                             <li class="d-flex mb-4 pb-1 mt-4">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-success"><i class='menu-icon bx bx-group' ></i></span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">high priority Cases</h6>
                                        <small class="text-muted">The number of high priority cases</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["casehighprioritycount"]</small>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--/ total case -->
           
            <!-- total mediator-->
            <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between pb-0">
                        <div class="card-title mb-0">
                            <h5 class="m-0 me-2">Details the Mediators</h5>
                            <small class="text-muted align-content-ends">number of mediators : @TempData["mediatorcount"]</small>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex flex-column align-items-center gap-1">
                                <span>Total Mediators</span>
                            </div>
                            <div id="orderStatisticsChart"></div>
                        </div>
                        <ul class="p-0 m-0">
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-success"> <i class='menu-icon bx bx-group'></i></span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Pending mediators</h6>
                                        <small class="text-muted">The number of mediators that have been pending</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["mediatorpencount"]</small>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-primary">
                                         <i class='menu-icon bx bx-group' ></i>
                                    </span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Accepted mediators</h6>
                                        <small class="text-muted">The number of mediators that have been accepted</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["mediatoracccount"]</small>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <span class="avatar-initial rounded bg-label-success"><i class='menu-icon bx bx-group' ></i></span>
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Rejected mediators</h6>
                                        <small class="text-muted">The number of mediators that have been rejected</small>
                                    </div>
                                    <div class="user-progress">
                                        <small class="fw-semibold">@TempData["mediatorrejcount"]</small>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--/ total mediator -->
             <!-- Transactions -->
            <div class="col-md-6 col-lg-4 order-2 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="card-title m-0 me-2">Transactions</h5>
                    </div>
                    <div class="card-body">
                        <ul class="p-0 m-0">
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3 ">
                                    <img src="~/templete/assets/img/icons/unicons/wallet.png" alt="User" class="rounded" />
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Number of transaction</h6>
                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@TempData["numberoftransaction"]</h6>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="~/templete/assets/img/icons/unicons/wallet.png" alt="User" class="rounded" />
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Sum of amount</h6>
                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@TempData["sumofamount"]</h6>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                     <img src="~/templete/assets/img/icons/unicons/wallet.png" alt="User" class="rounded" />
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">Count case payment</h6>
                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@TempData["countcase"] </h6>
                                    </div>
                                </div>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <!--/ Transactions -->

        </div>
    </div>
    </div>
    <!-- / Content -->
