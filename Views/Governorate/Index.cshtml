@model IEnumerable<Governorate>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/tables.css">
<div class="container-fluid my-5 bg-white p-3 mytable">
	<div class="row mb-4">
		<div class="col-6">
			<h5 class="tableName mb-4 mt-2">Governorates Table</h5>
		</div>
		<div class="col-6 text-end">
			<a asp-action="Create" class="btn btn-outline-primary">Create New Governorate</a>
		</div>
	</div>
<table class="table">
	<thead>
		<tr>
			<th colspan="2">
				@Html.DisplayNameFor(m => m.Name)
			</th>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@item.Name
			</td>
			<td class="text-end gap-1">
				<a asp-action="details" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="fa-solid fa-circle-info"></i> Details</a>
				<a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="fa-solid fa-pen"></i> Edit</a>
				<button data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-outline-danger"
					onclick="document.getElementById('deleteform').action = '/governorate/delete/@item.Id'">
					<i class="fa-solid fa-trash me-1"></i>Delete
				</button>
			</td>
		</tr>
	}
</table>
</div>
<div class="modal" id="Modal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Case Category</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				Are you sure you want delete this governorate ?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
				<form id="deleteform" asp-action="delete" method="post">
					<button class="btn btn-danger">Yes</button>
				</form>
			</div>
		</div>
	</div>
</div>

